{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "no-loops",
        "react-hooks"
    ],
    "extends": [
        "plugin:react/jsx-runtime",
        "plugin:react/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-console": 2,
        "no-loops/no-loops": 2,
        "react-hooks/exhaustive-deps": 1
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
